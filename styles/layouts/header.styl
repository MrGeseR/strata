header
  background -moz-linear-gradient(top, rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('img/bg.jpg') no-repeat center / cover
  background -webkit-linear-gradient(top, rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('img/bg.jpg') no-repeat center / cover
  background linear-gradient(top, rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('img/bg.jpg') no-repeat center / cover
  width 100%
  text-align center
  margin 0
  padding: 6em 4em;

.mainHeader
  font-size 1.35rem
  line-height 1.75rem

@media (min-width 992px) and (max-width 1560px)
  br
    display none
@media (max-width 480px)
  br
    display none


#avatar
  border-bottom none
  margin-bottom 1rem

.header_avatar
  border-radius 100%
  border-bottom none
  margin-bottom 2rem


@media (min-width 992px) 
  header
    position fixed
    width 35%
    height 100vh
    top 0
    left 0
    text-align right
  .header_avatar
    margin-bottom 1rem

