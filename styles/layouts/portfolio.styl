.portfolio
  border-bottom solid 2px #efefef
  border-top solid 2px #efefef
  margin 4rem 0
  padding 4rem 0
  &__example
    // cursor pointer
    position relative
    display block
    &_title
      font-size 1rem
      margin 0 0 0.5em 0
    &_description
      font-size .8rem
      margin 0 0 2em 0
    &_img
      border-radius 0.35rem
      width 100%
      margin-bottom 0.6rem
      text-align center
      display block
  &__veil
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    border-radius 0.35rem
    z-index 2
    background rgba(black, 0.5)
    transition .3s
    opacity 0
    &:hover
      opacity 1
    &:after
      content 'View'
      font-size 1rem
      text-align center
      width 25%
      border: solid 3px rgba(255, 255, 255, .5);
      border-radius 6px
      opacity 0
      padding 0.5rem 0
      line-height 1.5rem
      color #fff
      position absolute
      left 50%
      top 50%
      transform translate(-50%, -50%)
      display inline-block
      box-sizing border-box
      transition .5s
    &:hover:after
      opacity 1
      z-index 5