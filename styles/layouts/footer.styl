.mainFooter
  background url('img/bg.jpg')  no-repeat center / cover
  width 100%
  padding: 4em 4em 6em 4em;
  position: relative;
  text-align: center;
  width: 100%;
.socials__link
  text-decoration none
  font-size 2rem
  color rgba(255, 255, 255, 0.4)
  margin 0 .6rem
  transition 0.5s
  &:hover,&:active,&:focus
    color #49bf9d
.copyrights
  display block
  font-size .8rem
  li
    display inline-block
    padding 0 0.75rem
    line-height 1rem
    &:not(:last-child)
      border-right 1px solid rgba(255, 255, 255, 0.4)