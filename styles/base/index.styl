*
  box-sizing border-box
html
  padding 0
  font-size 16px

@media (max-width 480px)
  html
    font-size 14px
@media (min-width 481px)
  html
    font-size 18px
@media (min-width 992px)
  html
    font-size 16px
@media (min-width 1200px)
  html
    font-size 18px
@media (min-width 1800px)
  html
    font-size 20px

img
  max-width 100%

body
  font-family "Source Sans Pro", Helvetica, sans-serif
  font-weight 300
  line-height 1.75em
  color #a2a2a2
  margin 0

h1, h2, h3, h4
  font-weight normal !important
  color: #787878;
  font-weight: 400;
  margin: 0 0 1em 0;

strong 
  color #fff
  font-weight 300

p
  font-size .8rem
  margin-bottom 2rem

// form
//   margin: 0 0 2em 0

.content
  padding 3rem 4em
  
@media (min-width 992px) 
  .content
    width 65%
    position relative
    margin-left 35%
    max-width: 54em
@media (min-width 1800px) 
  .content
    max-width 100%

.simple_link
  color #a2a2a2
  text-decoration none
  border-bottom dotted 1px
  transition 0.3s
  display inline-block
  
  &:hover
    color #49bf9d
    border-bottom dotted 1px transparent