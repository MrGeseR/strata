.input
  line-height 2.75rem
  background #f7f7f7
  border-radius 0.35rem
  border 2px solid transparent
  color inherit
  display block
  font-size 1rem
  outline 0
  padding 0 0.75rem
  text-decoration none
  width 100%
  transition 0.3s
  &:focus
    border 2px solid #49bf9d
  &_group
    margin-bottom 0.5rem
